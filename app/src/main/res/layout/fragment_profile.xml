<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_alignParentTop="true"
                android:background="@color/Red"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageButton
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_arrow_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="Profile"
                        android:textColor="#ffffff"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />

                    <ImageButton
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_outline_settings_24" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/prifile_img_layou"
                android:layout_width="69.6dp"
                android:layout_height="69.6dp"
                android:layout_below="@+id/profile_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pizza" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prifile_img_layou"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#040707"
                android:textSize="13.3sp"
                android:textStyle="normal"
                tools:text="Joseph Dev" />

            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7.3dp"
                android:fontFamily="sans-serif"
                android:textColor="#989898"
                android:textSize="9.3sp"
                android:textStyle="normal"
                tools:text="Model town, Lahore pakistan" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_location"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="My Orders"
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="Addresses"
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="Challenges &amp; Rewards  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="Vouchers  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="My Payment Cards  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="Help center  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="FAQ  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_relaxing_walk"
                        android:fontFamily="sans-serif-medium"
                        android:text="Logout  "
                        android:textColor="#040707"
                        android:textSize="15.3sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>