<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10.7dp"
    android:paddingStart="14.7dp"
    android:paddingEnd="14.7dp"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconPassword"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/pizza"/>

            <LinearLayout
                android:paddingTop="16dp"
                android:paddingBottom="16.7dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconPassword"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Sandwich"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginTop="5.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QTY: 2"
                    android:textSize="12dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$150.00"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/Red"/>

            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="$50.00"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24.7dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="24dp"
                            android:src="@drawable/minus" />

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="29dp"
                            android:layout_height="24dp"
                            android:text="2"
                            android:textColor="@color/Red"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="24dp"
                            android:src="@drawable/add" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>