<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CanHalalRes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TabLayout.TabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/Red</item>
        <item name="android:textStyle">bold</item>
        <item name="colorSurface">@color/Red</item>
        <item name="colorOnSurface">@color/grey</item>
<!--       <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>-->
    </style>
    <style name="TabLayout.TabText.Restaurant" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/Red</item>
